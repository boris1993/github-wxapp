/**index.wxss**/

/** 本页面所有input组件应用样式 **/
input {
  background-color: lightgray;
  margin: 10rpx;
  padding: 25rpx;
  border-radius: 5px;
  color: black;
}

/** 登陆页面最外层view样式 **/
.login-page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/** 开关及标签整体样式 **/
.switch-area {
  margin: 10rpx;
}

/** 开关所属label的样式 **/
.switch-label {
  padding: 0 30rpx;
}

/** 按钮样式 **/
.button {
  margin: 50rpx 50rpx 0;
  padding: 0 50rpx;
  width: 430rpx;
}

/** 页面底部提示信息 **/
.bottom-text {
  margin: 50rpx 50rpx 0;
  font-size: 35rpx;
}