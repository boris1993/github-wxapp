/* pages/main/main.wxss */

page, .page, .page__bd {
  height: 100%;
}

icon {
  vertical-align: baseline;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  text-align: center;
}

.weui-cells:before {
  border-top: 0;
}

.weui-cell__bd {
  text-align: left;
  margin-left: 20rpx;
}

.header {
  padding-top: 40rpx;
}

.avatar {
  height: 153rpx;
  width: 153rpx;
  border-radius: 50%;
  border: 5rpx solid white;
}

.username {
  font-size: 30rpx;
}

.name {
  font-size: 35rpx;
}

.line {
  height: 1rpx;
  background: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.repo-list {
  background-color: #2c3e50;
  margin: 0 20rpx;
}

.repo-item {
  font-family: 'Fira Code';
  font-weight: normal;
  font-style: normal;
}

.counts {
  margin: 0 10rpx;
  font-size: 30rpx;
}
