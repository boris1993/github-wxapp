/* pages/main/main.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  text-align: center;
}

.header {
  padding-top: 40rpx;
}

.avatar {
  height: 153rpx;
  width: 153rpx;
  border-radius: 50%;
  border: 5rpx solid white;
}

.username {
  font-size: 30rpx;
}

.name {
  font-size: 35rpx;
}

.line {
  height: 1rpx;
  background: white;
  margin: 20rpx 20rpx;
}

.repo-list-container {
  display:flex;
  flex-direction:column;
  width:100%;
  height:100%;
  flex:1 1 auto;
  overflow-y:auto;
}

.repo-list {
  background-color: #2C3E50;
  margin: 0 20rpx;
}